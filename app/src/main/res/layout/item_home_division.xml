                </TextView>
                <TextView
                    style="@style/division_tablerow_style"
                    android:text="肯德基">
                </TextView>
                <TextView
                    style="@style/division_tablerow_style"
                    android:text="肯德基">
                </TextView>
            </TableRow>
            <TableRow>
                <TextView
                    style="@style/division_tablerow_style"
                    android:text="肯德基">
                </TextView>
                <TextView
                    style="@style/division_tablerow_style"
                    android:text="肯德基">
                </TextView>
                <TextView
                    style="@style/division_tablerow_style"
                    android:text="肯德基">
                </TextView>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</LinearLayout>